<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AD5F3AB7"
    tools:context=".SignUp">
    <TextView
        android:id="@+id/textsign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME NEW USER "
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#E91E63"
        android:layout_marginTop="45sp"
        android:layout_marginRight="50sp"
        />
    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textsign"
        android:layout_marginTop="40sp"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME: "
            android:textSize="20sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold|italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/getuser"
            android:hint="username..."/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="15sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textpass"
            android:text="PASSWORD: "
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold|italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/getpass"
            android:hint="password..."
            android:inputType="textPassword"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15sp"
        android:layout_below="@+id/third">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmpass: "
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:textColor="@color/purple_700"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/getpass2"
            android:hint="retype password..."
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifth"
        android:layout_below="@+id/fourth"
        android:padding="15sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="@color/purple_700"
            android:textStyle="bold|italic"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/getemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email address..."
            android:layout_marginLeft="20sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE GENDER"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_below="@+id/fifth"
        android:layout_centerHorizontal="true"
        android:padding="15sp"
        android:textSize="20sp"

        />
    <LinearLayout
        android:id="@+id/sixth"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/gender"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15sp"
        android:layout_height="wrap_content">

            <RadioButton
                android:layout_gravity="center"
                android:id="@+id/radiomale"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#3F51B5"
                android:textSize="27sp" />

            <RadioButton
                android:id="@+id/radiofemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="27sp"
                android:textColor="#3F51B5"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sixth"
        android:layout_centerHorizontal="true"
        android:text="SIGNUP" />

</RelativeLayout>
